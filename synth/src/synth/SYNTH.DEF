					dd 120 dup (?)  ; !!!!!!! mem wall
               ends

Comp_Fl  macro Comp1,Comp2,Add1,Add2
local @@tt3,@@tt4

	fld    st	
        fcomp  Comp1
        fstsw  ax
        sahf
        jb     @@tt3

        fcomp  Comp2
        fstsw  ax
        sahf
        ja     @@tt3
	Add1
	jmp    @@tt4
@@tt3:
	finit
	fld    Add1
@@tt4:

endm

GET_SAMPLE_ADDR macro  REG_      ; eax - sample num
		lea  REG_,Tmp_Samples
		imul eax,SIZE TMP_SAMPLE
		add  REG_,eax
endm

GET_CHANNEL_ADDR macro  REG_      ; eax - sample num
		lea  REG_,Channels
		imul eax,SIZE TMP_SAMPLE
		add  REG_,eax
endm

COPY_SAMPLE macro
        mov ecx,SAMPLE_SIZE
	rep movsd
endm

CLEAR_SAMPLE  macro
	xor eax,eax
        mov ecx,MAX_SAMPLE_SIZE_
	rep stosd
endm

