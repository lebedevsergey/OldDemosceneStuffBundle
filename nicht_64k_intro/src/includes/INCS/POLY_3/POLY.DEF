Do_Fix3 macro        ; X1 не должно быть = X3, иначе деление на 0
       mov  eax,[esi].P_V_SY
       cmp  eax,[edi].P_V_SY
       jnz  @@Sort1
       xchg esi,ebp
@@Sort1:
endm

Calc_DParam1  macro  Param1,Param2         ; Расчет Delta какого-нить из параметров
                   mov  eax,[ebp].P_V_&Param1
                   mov  ebx,[esi].P_V_&Param1
                   sub  eax,ebx
                   mov  Poly_Edge_Start_&Param2,ebx
                   cdq
                   shld edx,eax,TRI_FIX_P_COEF_XY
                   shl  eax,TRI_FIX_P_COEF_XY
                   idiv ecx
                   mov  Poly_Edge_D&Param2,eax
                   ENDM

Calc_Line_DParam1  macro  Param1,Param2      ; Расчет Line Delta какого-нить
                                             ;  из параметров
                   fild  [ebp].P_V_&Param1
                   fild  [edi].P_V_&Param1
                   fisub [esi].P_V_&Param1
                   fmul  st,st(3)
                   fiadd [esi].P_V_&Param1
                   fsubp st(1),st
                   fmul  st,st(1)
                   fistp Poly_Line_D&Param1
endm

Do_Subpixel_Correct macro  Param1,Param2
                   mov  eax,Param1
                   imul Poly_Edge_Ex_Y
                   shrd eax,edx,TRI_FIX_P_COEF_XY
                   add  Param2,eax
endm