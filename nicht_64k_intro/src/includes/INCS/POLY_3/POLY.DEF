Do_Fix_Calc_Tex    macro     ; Вычисление параметров так,
                             ; чтобы не было переполнения при DY < 1

mov eax,40000000h
xor edx,edx
idiv ecx
mov ecx,eax
                   mov  eax,[ebp].P_V_SX
                   mov  ebx,[esi].P_V_SX
                   sub  eax,ebx
                   mov  Poly_Edge_Start_X,ebx
imul ecx
                   shrd eax,edx,TRI_FIX_P_COEF_XY-2
                   mov  Poly_Edge_DX,eax

                   mov  eax,[ebp].P_V_U
                   mov  ebx,[esi].P_V_U
                   sub  eax,ebx
                   mov  Poly_Edge_Start_U,ebx
imul ecx
                   shrd eax,edx,TRI_FIX_P_COEF_XY-2
                   mov  Poly_Edge_DU,eax

                   mov  eax,[ebp].P_V_V
                   mov  ebx,[esi].P_V_V
                   sub  eax,ebx
                   mov  Poly_Edge_Start_V,ebx
imul ecx
                   shrd eax,edx,TRI_FIX_P_COEF_XY-2
                   mov  Poly_Edge_DV,eax

endm

